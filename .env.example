# ===========================================
# AUNQA-ESAR Environment Configuration Example
# ===========================================
# Copy this file to .env and update the values

# Application Environment
NODE_ENV=development
PORT=3002

# Frontend Development Server
VITE_PORT=5173
VITE_HOST=localhost

# ===========================================
# API Configuration
# ===========================================
VITE_API_BASE_URL=http://localhost:3002
API_BASE_URL=http://localhost:3002

# ===========================================
# Firebase Configuration
# ===========================================
# Get these values from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Firebase Web App Config (Frontend)
# Get these from Firebase Console > Project Settings > General > Your apps
VITE_FIREBASE_API_KEY=your-firebase-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# ===========================================
# Firebase Collections
# ===========================================
FIREBASE_USERS_COLLECTION=users
FIREBASE_QUALITY_COMPONENTS_COLLECTION=quality_components
FIREBASE_INDICATORS_COLLECTION=indicators
FIREBASE_EVALUATIONS_COLLECTION=evaluations
FIREBASE_ASSESSMENT_SESSIONS_COLLECTION=assessment_sessions
FIREBASE_COMMITTEE_EVALUATIONS_COLLECTION=committee_evaluations
FIREBASE_MAIN_TOPIC_COLLECTION=main_topic
FIREBASE_SUB_TOPIC_COLLECTION=sub_topic
FIREBASE_PROGRAMS_COLLECTION=programs
FIREBASE_ROLES_COLLECTION=roles
FIREBASE_EVALUATIONS_ACTUAL_COLLECTION=evaluations_actual

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your-jwt-secret-key-min-32-characters
JWT_EXPIRES_IN=7d

# ===========================================
# File Upload Configuration
# ===========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGIN=http://localhost:5173,http://localhost:5174
CORS_CREDENTIALS=true

# ===========================================
# Development Settings
# ===========================================
DEBUG=true
LOG_LEVEL=info