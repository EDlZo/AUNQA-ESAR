# ===========================================
# AUNQA-ESAR Environment Configuration Example
# ===========================================
# Copy this file to .env and update the values

# Application Environment
NODE_ENV=development
PORT=3002

# Frontend Development Server
VITE_PORT=5173
VITE_HOST=localhost

# ===========================================
# API Configuration
# ===========================================

# API Base URLs
VITE_API_BASE_URL=http://localhost:3002
API_BASE_URL=http://localhost:3002

# Server Ports
FIREBASE_SERVER_PORT=3002
MYSQL_SERVER_PORT=3001

# ===========================================
# Firebase Configuration (Frontend)
# ===========================================
# Get these values from Firebase Console > Project Settings > General

VITE_FIREBASE_API_KEY=your-firebase-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# ===========================================
# Firebase Admin SDK (Backend)
# ===========================================

FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# ===========================================
# Database Configuration
# ===========================================

# Firebase Firestore Collections
FIRESTORE_USERS_COLLECTION=users
FIRESTORE_QUALITY_COMPONENTS_COLLECTION=quality_components
FIRESTORE_INDICATORS_COLLECTION=indicators
FIRESTORE_EVALUATIONS_COLLECTION=evaluations
FIRESTORE_ASSESSMENT_SESSIONS_COLLECTION=assessment_sessions

# MySQL Configuration (Legacy - for migration only)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=project_aunqa

# ===========================================
# File Upload Configuration
# ===========================================

UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# ===========================================
# Security Configuration
# ===========================================

CORS_ORIGIN=http://localhost:5173,http://localhost:5174
CORS_CREDENTIALS=true
SESSION_SECRET=change-this-to-a-random-secret-key
SESSION_MAX_AGE=86400000

# ===========================================
# Application Features
# ===========================================

ENABLE_FILE_UPLOAD=true
ENABLE_PDF_GENERATION=true
ENABLE_COMMITTEE_EVALUATION=true
ENABLE_ASSESSMENT_REPORTS=true

# ===========================================
# Logging Configuration
# ===========================================

LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ===========================================
# Development Tools
# ===========================================

DEBUG=true
VERBOSE_LOGGING=false
VITE_HMR=true